<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/lessonsFragmentX"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ru.sequentor.uula.ui.fragment.LessonsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_lessons">
        <action
            android:id="@+id/action_navigation_home_self"
            app:destination="@id/navigation_home"
            app:popUpTo="@+id/action_navigation_home_self"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/lessonsFragmentX"
        android:name="ru.sequentor.uula.ui.fragment.LessonsFragment"
        android:label="LessonsFragmentX" />

</navigation>
